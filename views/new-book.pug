extends layout 

block content 
        h2= title

        include error

        form(action="/books", method="post")
            p
                label(for='title') Title
                input#title(name='title_field', type='text')            
            p
                label(for='author') Author
                input#author(name='author_field', type='text')            
            p
                label(for='genre') Genre
                input#genre(name='genre_field', type='text')            
            p
                label(for='year') Year
                input#year(name='year_field', type='text')
            
            input(type='submit')
            
            a.button(href='/books') Cancel